@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@model Substances.IndexModel

@inject IViewLocalizer Localizer


@{
    ViewData["Title"] = "Index";
}

<h2>Вещества</h2>


@if ((await AuthorizationService.AuthorizeAsync(User, "AdminOnly")).Succeeded)
{
    <p>
        <a asp-page="Create">@Localizer["Create New"]</a>
    </p>
}


<div class="row">

    @foreach (var item in Model.HeadTablLanguage)
    {
        <div class="col-md-3 col-sm-6">
            <a asp-page="./Properties"
               asp-route-systemurl="@item.SystemUrl">
                @Html.Raw(item.System)
            </a>
        </div>
    }
</div>