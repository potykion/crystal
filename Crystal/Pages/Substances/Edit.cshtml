@page "{systemUrl}"
@using Substances
@model Substances.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HeadTablLanguage.Id"/>

            <div class="form-group">
                <label asp-for="HeadTablInvariant.System" class="control-label"></label>
                <input asp-for="HeadTablInvariant.System" class="form-control"/>
                <span asp-validation-for="HeadTablInvariant.System" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HeadTablInvariant.Help" class="control-label"></label>
